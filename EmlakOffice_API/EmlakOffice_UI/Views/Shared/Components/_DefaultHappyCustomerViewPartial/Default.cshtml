@model List<EmlakOffice_UI.Dtos.ReferansDtos.ReferansSonucDto>
<div id="testimonials" class="section lb">
    <div class="container">
        <div class="section-title row text-center">
            <div class="col-md-8 col-md-offset-2">
                <h3>Memnun Müşteriler</h3>
                <p class="lead">Memnun kalan müşterilerimizin yorumları aşağıdadır.</p>
            </div><!-- end col -->
        </div><!-- end title -->

        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="testi-carousel owl-carousel owl-theme">
                    @foreach(var item in Model)
                    {
                    <div class="testimonial clearfix">
                        <div class="desc">
                            <h3><i class="fa fa-quote-left"></i> @item.Baslik <i class="fa fa-quote-right"></i></h3>
                            <p class="lead">@item.Yorum</p>

                        </div>
                        <div class="testi-meta">
                            <img src="@item.Resim" alt="" class="img-responsive alignleft">
                            <h4>@item.AdSoyad</h4>
                        </div>
                        <!-- end testi-meta -->
                    </div>
                    }
                    <!-- end testimonial -->

                </div><!-- end carousel -->
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end section -->