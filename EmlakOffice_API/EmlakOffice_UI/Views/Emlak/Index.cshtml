@model List<EmlakSonucDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Kategori Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İlan Başlığı</th>
                                <th scope="col">Şehir</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tür</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sitede Gör</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.emlakId</th>
                                    <td>@item.basligi</td>
                                    <td>@item.sehir</td>
                                    <td>@item.kIsim</td>
                                    <td>@item.fiyati</td>
                                    <td>@item.tip</td>
                                    <td><a href="/Emlak/EmlakSil/@item.emlakId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Emlak/EmlakGuncelle/@item.emlakId" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a href="/Emlak/EmlakDetay/@item.emlakId" class="btn btn-outline-primary">Sitede Gör</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Emlak/EmlakOlustur/" class="btn btn-outline-info">Yeni İlan Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>