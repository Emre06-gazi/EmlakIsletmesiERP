@model EmlakOlustur
@{
    ViewData["Title"] = "EmlakOlustur";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni İlan Ekleme Sayfası</h6>
                <form method="post">
                    <label>İlan Başlığı</label>
                    <input type="text" asp-for="basligi" class="form-control" />
                    <br />
                    <label>Şehir</label>
                    <input type="text" asp-for="sehir" class="form-control" />
                    <br />
                    <label>İlçe</label>
                    <input type="text" asp-for="ilce" class="form-control" />
                    <br />
                    <label>Kategori</label>
                   @Html.DropDownListFor(x=>x.kategoriId,(List<SelectListItem>)ViewBag.j, new {@class="form-control"})
                    <br />
                    <label>Fiyat</label>
                    <input type="text" asp-for="fiyati" class="form-control" />
                    <br />
                    <label>Tür</label>
                    <input type="text" asp-for="tip" class="form-control" />
                    <br />  
                    <label>Kapak Fotoğrafı</label>
                    <input type="text" asp-for="resmi" class="form-control" />
                    <br />
                    <label>Adres</label>
                    <textarea asp-for="adres" class="form-control" rows ="5"></textarea>
                    <br />
                    <button class="btn btn-primary">İlan Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>
